<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBorder"/>
            <corners android:radius="@dimen/list_item_border_radius" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="@dimen/list_item_border_size"
        android:id="@+id/list_item_bg_shape">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBackgroundSelected"/>
            <corners android:radius="@dimen/list_item_border_radius" />
        </shape>
    </item>
</layer-list>